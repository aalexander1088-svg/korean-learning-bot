# Korean Learning Bot Environment Variables
# Copy this file to .env and fill in your details

# OpenAI API Key (required for AI responses)
OPENAI_API_KEY=your_openai_api_key_here

# Email Configuration
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_here
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
DEFAULT_EMAIL=your_email@gmail.com
NEWS_RECIPIENT_EMAIL=your_email@gmail.com

# Google Service Account (for Google Docs integration)
GOOGLE_CLIENT_EMAIL=your_service_account_email@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Server Configuration
PORT=3001
DATABASE_PATH=korean_learning.db

# Optional: Text-to-Speech settings
TTS_ENABLED=true
TTS_VOICE=nova

# Optional: Learning preferences
DEFAULT_DIFFICULTY=intermediate
DEFAULT_PRACTICE_MODE=free
VOCABULARY_REVIEW_INTERVAL=7
GRAMMAR_FOCUS_DURATION=10